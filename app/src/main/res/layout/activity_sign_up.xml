<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/constraint_layout_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    tools:context=".presentation_layer.activities.SignUpActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_0"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0.187" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/guideline_1"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0.813" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_0"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.128" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/guideline_horizontal_1"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.846" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.938" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/guideline_horizontal_3"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.257" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/colorTeal"
        android:id="@+id/already_have_text_view"
        android:text="@string/already_have"
        android:fontFamily="@font/roboto_light_italic"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="36sp"
        app:autoSizeStepGranularity="22sp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/go_back_icon"
        android:contentDescription="@string/go_back_icon"
        android:src="@drawable/go_back_icon"

        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_0"
        app:layout_constraintEnd_toEndOf="@id/guideline_0"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:id="@+id/constraint_layout_1"

        app:layout_constraintLeft_toLeftOf="@id/guideline_0"
        app:layout_constraintRight_toRightOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_0"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_3">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sign_up_textview"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="@string/sign_up"
            app:autoSizeMaxTextSize="50sp"
            app:autoSizeMinTextSize="24sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"

            android:layout_marginEnd="80dp"
            app:layout_constraintBottom_toTopOf="@id/description_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/indicator_0"
            android:layout_width="10dp"
            android:layout_height="10dp"

            android:background="@drawable/sign_up_process_indicator"
            tools:ignore="ContentDescription"

            android:layout_marginStart="41dp"
            app:layout_constraintBottom_toTopOf="@id/description_1"
            app:layout_constraintLeft_toRightOf="@id/sign_up_textview"
            app:layout_constraintRight_toLeftOf="@id/indicator_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592" />

        <ImageButton
            android:id="@+id/indicator_1"
            android:layout_width="10dp"
            android:layout_height="10dp"

            android:background="@drawable/sign_up_process_indicator"
            tools:ignore="ContentDescription"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toTopOf="@id/description_1"
            app:layout_constraintLeft_toRightOf="@id/indicator_0"
            app:layout_constraintRight_toLeftOf="@id/indicator_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592" />

        <ImageButton
            android:id="@+id/indicator_2"
            android:layout_width="10dp"
            android:layout_height="10dp"

            android:background="@drawable/sign_up_process_indicator"
            tools:ignore="ContentDescription"

            app:layout_constraintBottom_toTopOf="@id/description_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/description_1"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorDescriptionGrey"
            android:gravity="start"
            android:text="@string/description_1"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="36sp"
            app:autoSizeMinTextSize="14dp"

            app:layout_constraintTop_toBottomOf="@id/sign_up_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:id="@+id/constraint_layout_2"

        app:layout_constraintLeft_toLeftOf="@id/guideline_0"
        app:layout_constraintRight_toRightOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_3"
        app:layout_constraintBottom_toTopOf="@id/next_button">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.vitaly_kuznetsov.point.presentation_layer.sign_up_fragments.SignUpOneFragment"
            android:id="@+id/sign_up_fragment"
            tools:layout="@layout/fragment_sign_up_one" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:id="@+id/next_button"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/next_text_view"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:background="@drawable/sign_up_button"
        android:textColor="@color/colorWhite"
        android:textScaleX="1.02"
        android:textSize="18sp"
        android:gravity="center"

        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_1"
        app:layout_constraintStart_toStartOf="@+id/guideline_0" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:id="@+id/error_text_view"
        android:text="@string/error_string"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light_italic"
        android:textColor="@color/colorErrorPink"
        android:alpha="0"

        app:layout_constraintTop_toBottomOf="@id/next_button"
        app:layout_constraintRight_toRightOf="@id/guideline_1"/>

</android.support.constraint.ConstraintLayout>