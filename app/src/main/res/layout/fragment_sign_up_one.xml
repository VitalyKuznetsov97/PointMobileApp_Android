<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_0"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.162" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.8703" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:fontFamily="@font/roboto_light"
        android:id="@+id/edit_text_0"
        android:hint="@string/name_hint"
        android:textSize="14sp"
        android:textColorHint="@color/colorIndicatorPurple"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_0"
        app:layout_constraintBottom_toTopOf="@id/gender_text_view"
        android:inputType="text" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="30dp"

        android:id="@+id/gender_text_view"
        android:text="@string/gender_text"
        android:textColor="@color/colorIndicatorPurple"
        android:fontFamily="@font/roboto_light"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeStepGranularity="1sp"
        android:gravity="start"

        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/linear_layout_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:id="@+id/linear_layout_0"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="@id/date_of_birth_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_text_view">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:textColor="@color/colorDescriptionGrey"
            android:text="@string/male_text"
            android:fontFamily="@font/roboto_regular"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.AppCompat"

            android:layout_marginStart="18dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/gender_male_button"
            android:layout_weight="1"
            android:background="@drawable/field_template"
            android:layout_gravity="start"
            tools:ignore="ButtonStyle" />


        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:textColor="@color/colorDescriptionGrey"
            android:text="@string/female_text"
            android:fontFamily="@font/roboto_regular"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.AppCompat"

            android:layout_marginStart="15dp"
            android:layout_marginEnd="18dp"
            android:id="@+id/gender_female_button"
            android:layout_weight="1"
            android:background="@drawable/field_template"
            android:layout_gravity="end"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="30dp"

        android:id="@+id/date_of_birth_text_view"
        android:text="@string/date_of_birth_text"
        android:textColor="@color/colorIndicatorPurple"
        android:fontFamily="@font/roboto_light"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeStepGranularity="1sp"
        android:gravity="start"

        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toTopOf="@id/calendar_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_0" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:id="@+id/calendar_text_view"
        android:text="@string/hint_calendar_value"
        android:textColor="@color/colorDescriptionGrey"
        android:fontFamily="@font/roboto_regular"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="18sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeStepGranularity="1sp"
        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="@id/guideline_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_of_birth_text_view" />

</android.support.constraint.ConstraintLayout>